<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <connectionStrings>
        <add connectionString="Integrated Security=true;Server=records;Database=records;User Id=records;Password=records;" name="records connection" />
    </connectionStrings>

    <system.webServer>
        <security>
            <requestFiltering>
                <fileExtensions allowUnlisted="true">
                    <remove fileExtension="." />
                    <add fileExtension="." allowed="true" />
                </fileExtensions>
            </requestFiltering>
        </security>
    </system.webServer>
</configuration>

